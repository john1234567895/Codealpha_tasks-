import random

# Step 1: Predefined list of words
words = ["apple", "tiger", "house", "pizza", "zebra"]

# Step 2: Choose a random word from the list
word_to_guess = random.choice(words)
guessed_word = ["_"] * len(word_to_guess)
guessed_letters = []
max_attempts = 6
attempts = 0

print("🎮 Welcome to Hangman!")
print("Guess the word: ", " ".join(guessed_word))

# Step 3: Main game loop
while attempts < max_attempts and "_" in guessed_word:
    guess = input("Enter a letter: ").lower()

    if len(guess) != 1 or not guess.isalpha():
        print("❗ Please enter a single alphabet letter.")
        continue

    if guess in guessed_letters:
        print("⚠️ You already guessed that letter.")
        continue

    guessed_letters.append(guess)

    if guess in word_to_guess:
        print("✅ Good guess!")
        for index, letter in enumerate(word_to_guess):
            if letter == guess:
                guessed_word[index] = guess
    else:
        attempts += 1
        print(f"❌ Wrong guess! Attempts left: {max_attempts - attempts}")

    print("Current word: ", " ".join(guessed_word))
    print("Guessed letters: ", ", ".join(guessed_letters))

# Step 4: End of game
if "_" not in guessed_word:
    print("🎉 Congratulations! You guessed the word:", word_to_guess)
else:
    print("💀 Game Over! The word was:", word_to_guess)
